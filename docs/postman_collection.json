{
    "info": {
      "name": "Library Management API",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Users",
        "item": [
          {
            "name": "Get All Users",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/users",
              "description": "Retrieve all users from the system"
            }
          },
          {
            "name": "Get User by ID",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/users/{{userId}}",
              "description": "Retrieve a specific user by ID"
            }
          },
          {
            "name": "Create New User",
            "request": {
              "method": "POST",
              "url": "{{baseUrl}}/users",
              "body": {
                "mode": "raw",
                "raw": "{\n    \"name\": \"John Doe\",\n    \"email\": \"john@example.com\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "description": "Create a new user in the system"
            }
          }
        ]
      },
      {
        "name": "Books",
        "item": [
          {
            "name": "Get All Books",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/books",
              "description": "Retrieve all books from the system"
            }
          },
          {
            "name": "Get Book by ID",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/books/{{bookId}}",
              "description": "Retrieve a specific book by ID"
            }
          },
          {
            "name": "Add New Book",
            "request": {
              "method": "POST",
              "url": "{{baseUrl}}/books",
              "body": {
                "mode": "raw",
                "raw": "{\n    \"name\": \"The Great Gatsby\"\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "description": "Add a new book to the system"
            }
          }
        ]
      },
      {
        "name": "Borrow Operations",
        "item": [
          {
            "name": "Borrow Book",
            "request": {
              "method": "POST",
              "url": "{{baseUrl}}/borrow/{{userId}}/borrow/{{bookId}}",
              "description": "Borrow a book for a user"
            }
          },
          {
            "name": "Return Book",
            "request": {
              "method": "POST",
              "url": "{{baseUrl}}/borrow/{{userId}}/return/{{bookId}}",
              "body": {
                "mode": "raw",
                "raw": "{\n    \"score\": 5\n}",
                "options": {
                  "raw": {
                    "language": "json"
                  }
                }
              },
              "description": "Return a borrowed book with rating"
            }
          }
        ]
      },
      {
        "name": "Transactions",
        "item": [
          {
            "name": "Get User Transactions",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/transactions/user/{{userId}}",
              "description": "Get all transactions for a specific user"
            }
          },
          {
            "name": "Get Transaction by ID",
            "request": {
              "method": "GET",
              "url": "{{baseUrl}}/transactions/{{transactionId}}",
              "description": "Get a specific transaction by ID"
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "type": "string",
        "description": "Base URL for the API"
      },
      {
        "key": "userId",
        "value": "1",
        "type": "string",
        "description": "User ID for testing"
      },
      {
        "key": "bookId",
        "value": "1",
        "type": "string",
        "description": "Book ID for testing"
      },
      {
        "key": "transactionId",
        "value": "1",
        "type": "string",
        "description": "Transaction ID for testing"
      }
    ]
}