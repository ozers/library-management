{
    "info": {
      "_postman_id": "library-management-collection",
      "name": "Library Management API",
      "description": "API collection for the Library Management System",
      "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
      {
        "name": "Users",
        "item": [
          {
            "name": "Get All Users",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{baseUrl}}/users",
                "host": ["{{baseUrl}}"],
                "path": ["users"]
              }
            }
          },
          {
            "name": "Get User by ID",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{baseUrl}}/users/{{testUserId}}",
                "host": ["{{baseUrl}}"],
                "path": ["users", "{{testUserId}}"]
              }
            }
          },
          {
            "name": "Create User",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/users",
                "host": ["{{baseUrl}}"],
                "path": ["users"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n\t\"name\": \"John Doe\",\n\t\"email\": \"john@example.com\"\n}"
              }
            }
          }
        ]
      },
      {
        "name": "Books",
        "item": [
          {
            "name": "Get All Books",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{baseUrl}}/books",
                "host": ["{{baseUrl}}"],
                "path": ["books"]
              }
            }
          },
          {
            "name": "Get Book by ID",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{baseUrl}}/books/{{testBookId}}",
                "host": ["{{baseUrl}}"],
                "path": ["books", "{{testBookId}}"]
              }
            }
          },
          {
            "name": "Create Book",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/books",
                "host": ["{{baseUrl}}"],
                "path": ["books"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n\t\"name\": \"The Great Gatsby\"\n}"
              }
            }
          }
        ]
      },
      {
        "name": "Borrow Operations",
        "item": [
          {
            "name": "Borrow Book",
            "request": {
              "method": "POST",
              "url": {
                "raw": "{{baseUrl}}/borrow/{{testUserId}}/borrow/{{testBookId}}",
                "host": ["{{baseUrl}}"],
                "path": ["borrow", "{{testUserId}}", "borrow", "{{testBookId}}"]
              }
            }
          },
          {
            "name": "Return Book",
            "request": {
              "method": "POST",
              "header": [
                {
                  "key": "Content-Type",
                  "value": "application/json"
                }
              ],
              "url": {
                "raw": "{{baseUrl}}/borrow/{{testUserId}}/return/{{testBookId}}",
                "host": ["{{baseUrl}}"],
                "path": ["borrow", "{{testUserId}}", "return", "{{testBookId}}"]
              },
              "body": {
                "mode": "raw",
                "raw": "{\n\t\"score\": 5\n}"
              }
            }
          }
        ]
      },
      {
        "name": "Transactions",
        "item": [
          {
            "name": "Get User Transactions",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{baseUrl}}/transactions/user/{{testUserId}}",
                "host": ["{{baseUrl}}"],
                "path": ["transactions", "user", "{{testUserId}}"]
              }
            }
          },
          {
            "name": "Get Transaction by ID",
            "request": {
              "method": "GET",
              "url": {
                "raw": "{{baseUrl}}/transactions/{{testTransactionId}}",
                "host": ["{{baseUrl}}"],
                "path": ["transactions", "{{testTransactionId}}"]
              }
            }
          }
        ]
      }
    ],
    "variable": [
      {
        "key": "baseUrl",
        "value": "http://localhost:3000",
        "type": "string",
        "description": "Base URL for the API"
      },
      {
        "key": "testUserId",
        "value": "1",
        "type": "string",
        "description": "User ID for testing"
      },
      {
        "key": "testBookId",
        "value": "1",
        "type": "string",
        "description": "Book ID for testing"
      },
      {
        "key": "testTransactionId",
        "value": "1",
        "type": "string",
        "description": "Transaction ID for testing"
      }
    ],
    "event": [
      {
        "listen": "prerequest",
        "script": {
          "type": "text/javascript",
          "exec": [
            ""
          ]
        }
      },
      {
        "listen": "test",
        "script": {
          "type": "text/javascript",
          "exec": [
            "pm.test(\"Status code is successful\", function () {",
            "    pm.response.to.be.success;",
            "});",
            "",
            "pm.test(\"Response time is acceptable\", function () {",
            "    pm.expect(pm.response.responseTime).to.be.below(1000);",
            "});"
          ]
        }
      }
    ]
}