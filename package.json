{
  "name": "library-management",
  "version": "1.0.0",
  "description": "A library management application will be developed to manage members and the borrowing of books by members.",
  "main": "index.js",
  "scripts": {
    "start": "node dist/index.js",
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "debug": "node --inspect=0.0.0.0:9229 -r ts-node/register src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:logs": "docker-compose -f docker/docker-compose.yml logs -f",
    "docker:build:dev": "docker-compose -f docker/docker-compose.dev.yml build",
    "docker:up:dev": "docker-compose -f docker/docker-compose.dev.yml up",
    "docker:down:dev": "docker-compose -f docker/docker-compose.dev.yml down",
    "docker:logs:dev": "docker-compose -f docker/docker-compose.dev.yml logs -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@types/sequelize": "^4.28.20",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.1.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
